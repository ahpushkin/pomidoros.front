<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Pomidoros.View.ReadyPage"
             NavigationPage.HasNavigationBar="False">
    <ContentPage.Content>
        <ScrollView>
  
        <StackLayout VerticalOptions="Center">
        <Image Source="ready" Margin="0,0,0,0"></Image>

        <Label FontSize="30" Margin="0,39,0,0" FontFamily="{StaticResource BoldFont}" FontAttributes="Bold"
        HorizontalOptions="Center">

        <Label.FormattedText>
        <FormattedString>

        <Span Text="Вы готовы&#x0a;к работе!" TextColor="#1A1824"/>
        </FormattedString>

        </Label.FormattedText>
        </Label>

        <Label Margin="0,25,0,0" Text="Идёт загрузка заказов" FontFamily="{StaticResource NormalFont}" FontSize="16"
        TextColor="#1A1824" HorizontalOptions="Center"></Label>

        <ActivityIndicator x:Name="activ" IsRunning="true" Color="#96A637" Margin="0,30,0,30"/>

        </StackLayout>

        </ScrollView>
    </ContentPage.Content>
</ContentPage>
