<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    x:Class="Pomidoros.View.WelcomePage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    NavigationPage.HasNavigationBar="False">

    <ContentPage.Content>
        <ScrollView>
            <StackLayout
                Margin="30,-80,0,0"
                Orientation="Vertical"
                VerticalOptions="CenterAndExpand">
                <StackLayout VerticalOptions="CenterAndExpand">

                    <Label
                        FontFamily="{StaticResource NormalFont}"
                        FontSize="16"
                        Text="Здравствуйте,"
                        TextColor="#1A1824" />

                    <Label
                        x:Name="name"
                        FontFamily="{StaticResource BoldFont}"
                        FontSize="30"
                        TextColor="#1A1824" />

                </StackLayout>

                <ActivityIndicator
                    x:Name="activ"
                    Margin="0,155,0,0"
                    IsRunning="true"
                    Color="#96A637" />

            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>
