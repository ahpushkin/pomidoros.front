<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Pomidoros.View.MainPage"
             BackgroundColor="White"
             NavigationPage.HasNavigationBar="False">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout>
                <Frame BackgroundColor="#96A637" HeightRequest="99" Margin="0,-20,0,0">

                    <StackLayout x:Name="bar" Orientation="Horizontal" Margin="0,0,0,0">
                        <Button BackgroundColor="Transparent" TextColor="White" FontFamily="{StaticResource BoldFont}" Clicked="ProfileEvent" Text="Профиль"
                        HorizontalOptions="StartAndExpand" Margin="0,54,0,0" FontSize="14" FontAttributes="Bold"></Button>

                         <Button BackgroundColor="Transparent" TextColor="White" FontFamily="{StaticResource BoldFont}" Text="Мои заказы"
                        HorizontalOptions="CenterAndExpand" Clicked="MyOrderEvent" Margin="0,54,0,0" FontSize="14" FontAttributes="Bold"></Button>

                         <Button BackgroundColor="Transparent" Clicked="MyHistoryEvent" TextColor="White" FontFamily="{StaticResource BoldFont}" Text="История"
                        HorizontalOptions="EndAndExpand" Margin="-10,54,0,0" FontSize="14" FontAttributes="Bold"></Button>
                    </StackLayout>

                </Frame>
                <Frame BackgroundColor="White" CornerRadius="20" Margin="0,-20,0,0"
                       HasShadow="False">
                    <StackLayout>

                        <ImageButton BackgroundColor="Transparent" Source="trueorder" Margin="0,112,0,0"></ImageButton>

                         <Label FontSize="30" Margin="0,29,0,0" HorizontalOptions="Center"
                         HorizontalTextAlignment="Center" FontAttributes="Bold">
                        <Label.FormattedText>
                        <FormattedString>
                        <Span Text="Есть доступные&#x0a; заказы" TextColor="#1A1824"/>
                        </FormattedString>
                        </Label.FormattedText>

                         </Label>

                         <Label Margin="30,18,30,0" FontFamily="{StaticResource NormalFont}" HorizontalTextAlignment="Center" Text="Чтобы принять заказ, подойдите к монитору, проведите карточкой и получите талон"
                         FontSize="16"
                         TextColor="#1A1824"></Label>

                        <ImageButton BackgroundColor="Transparent" Clicked="HaveNext" HorizontalOptions="Start" Source="monitor" Margin="21,130,0,25"></ImageButton>
                    </StackLayout>
                </Frame>
                
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>
