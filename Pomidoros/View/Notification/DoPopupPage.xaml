<?xml version="1.0" encoding="UTF-8"?>
<pages:PopupPage  xmlns:pages="clr-namespace:Rg.Plugins.Popup.Pages;assembly=Rg.Plugins.Popup"
                 xmlns="http://xamarin.com/schemas/2014/forms"
                 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                 x:Class="Pomidoros.View.Notification.DoPopupPage">
     <Frame  
           HorizontalOptions="Center" 
           VerticalOptions="Center"
           HasShadow="True"
           Margin="30,0,30,0"
           CornerRadius="20"
           IsClippedToBounds="True"
           Padding="0">
         <!--main stack-->
         <StackLayout VerticalOptions="Center"
                      HorizontalOptions="FillAndExpand"
                      
                      BackgroundColor="#EFEFEF">
         <Label Text="Чтобы принять заказ, подойдите к монитору, проведите карточкой и получите талон" Margin="10,30,10,0" TextColor="Black"
         HorizontalOptions="Center" FontSize="16" HorizontalTextAlignment="Center" FontFamily="{StaticResource NormalFont}"></Label>
                <BoxView WidthRequest="290" HeightRequest="1" Margin="0,20,0,0" BackgroundColor="LightGray"/>
        <Button Text="Понятно" FontSize="17"  TextColor="#0074FF" BackgroundColor="Transparent"
                FontFamily="{StaticResource BoldFont}" Clicked="OnClose" Margin="0,0,0,10"></Button>
         </StackLayout>
    </Frame>
</pages:PopupPage>
