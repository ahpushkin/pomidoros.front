<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Pomidoros.View.RatingPage"
             BackgroundColor="White"
             NavigationPage.HasNavigationBar="False">
    <ContentPage.Content>
        <ScrollView>
        <StackLayout>
        <StackLayout VerticalOptions="CenterAndExpand">
        <Label Text="Понравилось ли вам доставка?" FontFamily="{StaticResource BoldFont}" HorizontalTextAlignment="Center" TextColor="#1A1824" FontSize="30"></Label>
        <Image Source="pker" Margin="30,25,30,0"></Image>
        
        </StackLayout>
        <StackLayout>
        <Button x:Name="done" BackgroundColor="Transparent" Clicked="DoneEvent" Margin="0,0,0,34" Text="Завершить доставку (0:15)" FontFamily="{StaticResource BoldFont}" FontSize="16"
        TextColor="#96A637" VerticalOptions="EndAndExpand" HorizontalOptions="Center"></Button>
        </StackLayout>
        </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>
