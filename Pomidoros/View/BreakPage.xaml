<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Pomidoros.View.BreakPage"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="White"
             xmlns:ffimageloading="clr-namespace:FFImageLoading.Forms;assembly=FFImageLoading.Forms"
             xmlns:fftransformations="clr-namespace:FFImageLoading.Transformations;assembly=FFImageLoading.Transformations">
        <ContentPage.Resources>
        <ResourceDictionary>

            <Style x:Key="TripTitleStyle" TargetType="Label">
                <Setter Property="FontFamily" Value="{StaticResource SourceSansSemiBold}" />
                <Setter Property="FontSize" Value="{StaticResource FontSize40}" />
                <Setter Property="TextColor" Value="{StaticResource BlackColor}" />
                <Setter Property="HorizontalOptions" Value="Center" />
                <Setter Property="HorizontalTextAlignment" Value="Center" />
                <Setter Property="FontAttributes" Value="Bold" />
                <Setter Property="LineBreakMode" Value="WordWrap" />
                <Setter Property="Margin" Value="48, 0, 48, 12" />
            </Style>

            <Style x:Key="BigCountdownStyle" TargetType="Label">
                <Setter Property="FontFamily" Value="{StaticResource SourceSansRegular}" />
                <Setter Property="FontSize" Value="{StaticResource FontSize44}" />
                <Setter Property="TextColor" Value="{StaticResource BlackColor}" />
                <Setter Property="HorizontalOptions" Value="Center" />
            </Style>

            <Style x:Key="SmallCountdownStyle" TargetType="Label">
                <Setter Property="FontFamily" Value="{StaticResource SourceSansRegular}" />
                <Setter Property="FontSize" Value="{StaticResource FontSize20}" />
                <Setter Property="TextColor" Value="{StaticResource TextGrayColor}" />
                <Setter Property="HorizontalOptions" Value="Center" />
            </Style>
            
        </ResourceDictionary>
    </ContentPage.Resources>

    <ContentPage.Content>
        <ScrollView>
        <StackLayout Orientation="Vertical"  VerticalOptions="StartAndExpand">
                
            <StackLayout Orientation="Horizontal" VerticalOptions="StartAndExpand" Margin="20,54,20,0">

            <ImageButton Source="back"  Clicked="BackEvent" BackgroundColor="Transparent" Margin="0,-10,0,0" HorizontalOptions="StartAndExpand"></ImageButton>

            <Label FontSize="16" BackgroundColor="Transparent" FontFamily="{StaticResource BoldFont}" TextColor="#1C1C1C" Text="Перерыв"></Label>

            <ImageButton Source="help" BackgroundColor="Transparent" Margin="0,-10,0,0" HorizontalOptions="EndAndExpand"></ImageButton>

            </StackLayout>
            <Frame  BackgroundColor="Transparent" Margin="30,26,30,0" CornerRadius="10" BorderColor="LightGray" HeightRequest="83">
            <Label Text="Перерыв на 15 мин одобрен" BackgroundColor="Transparent" TextColor="#1C1C1C"
            FontSize="16" HorizontalTextAlignment="Center"  FontFamily="{StaticResource BoldFont}" VerticalTextAlignment="Center"></Label>
            </Frame>
            <Frame BackgroundColor="Transparent" HorizontalOptions="Center" Margin="0,66,0,0" WidthRequest="212" BorderColor="#96A637" HeightRequest="212" CornerRadius="160">
            <StackLayout VerticalOptions="CenterAndExpand">
            <Label Text="осталось" BackgroundColor="Transparent" TextColor="#1C1C1C"
            FontSize="16" HorizontalTextAlignment="Center" Margin="0,0,0,0" FontFamily="{StaticResource NormalFont}" VerticalTextAlignment="Center"></Label>
            <Label Text="{Binding TimerProperty}" BackgroundColor="Transparent" TextColor="#1C1C1C"
            FontSize="30" HorizontalTextAlignment="Center" Margin="0,10,0,0" FontFamily="{StaticResource BoldFont}" VerticalTextAlignment="Center"></Label>
                    
            </StackLayout>
            </Frame>
            <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Label
                Grid.Row="0"
                Text="My Trip Countdown"
                Style="{StaticResource TripTitleStyle}"/>
            <Grid
                Grid.Row="1">
                <ffimageloading:CachedImage  
                    Aspect="AspectFit"
                    Source="{Binding MyTrip.Picture}"
                    Margin="12">
                    <ffimageloading:CachedImage.Transformations>
                        <fftransformations:CircleTransformation />
                    </ffimageloading:CachedImage.Transformations>
                </ffimageloading:CachedImage>
                <controls:CircleCountdown 
                    VerticalOptions="FillAndExpand"
                    HorizontalOptions="FillAndExpand"
                    Progress="{Binding Progress}"
                    ProgressStartColor="{StaticResource ProgressPinkColor}"
                    ProgressEndColor="{StaticResource ProgressBlueColor}"
                    StrokeWidth="10"/>
            </Grid>
            <Grid
                Grid.Row="2"
                RowSpacing="0"
                Margin="60, 24">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Label 
                    Grid.Column="0"
                    Grid.Row="0"
                    Text="{Binding Days, StringFormat='{0:D2}'}"
                    Style="{StaticResource BigCountdownStyle}"/>
                <Label 
                    Grid.Column="0"
                    Grid.Row="1"
                    Text="days"
                    Style="{StaticResource SmallCountdownStyle}"/>
                <Label 
                    Grid.Column="1"
                    Grid.Row="0"
                    Text=":"
                    Style="{StaticResource BigCountdownStyle}"/>
                <Label 
                    Grid.Column="2"
                    Grid.Row="0"
                    Text="{Binding Hours, StringFormat='{0:D2}'}"
                    Style="{StaticResource BigCountdownStyle}"/>
                <Label 
                    Grid.Column="2"
                    Grid.Row="1"
                    Text="hours"
                    Style="{StaticResource SmallCountdownStyle}"/>
                <Label 
                    Grid.Column="3"
                    Grid.Row="0"
                    Text=":"
                    Style="{StaticResource BigCountdownStyle}"/>
                <Label 
                    Grid.Column="4"
                    Grid.Row="0"
                    Text="{Binding Minutes, StringFormat='{0:D2}'}"
                    Style="{StaticResource BigCountdownStyle}"/>
                <Label 
                    Grid.Column="4"
                    Grid.Row="1"
                    Text="minutes"  
                    Style="{StaticResource SmallCountdownStyle}"/>
            </Grid>
            <StackLayout 
                Grid.Row="3"
                Margin="0, 0, 0, 48">
                <Grid
                    Margin="84, 12">
                    <skor:GradientButton  
                        HeightRequest="60"      
                        CornerRadius="96"
                        StartColor="{StaticResource ProgressPinkColor}"
                        EndColor="{StaticResource ProgressBlueColor}"
                        Command="{Binding RestartCommand}"/>
                    <Label       
                        Text="RESTART"  
                        FontFamily="{StaticResource SourceSansRegular}"
                        FontSize="{StaticResource FontSize24}" 
                        TextColor="{StaticResource WhiteColor}"
                        HorizontalOptions="Center"
                        VerticalOptions="Center"
                        InputTransparent="True"/>
                </Grid>
            </StackLayout>
        </Grid>
            </StackLayout>
            </ScrollView>
        </ContentPage.Content>
</ContentPage>
